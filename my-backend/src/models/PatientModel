const mongoose = require("mongoose");

// Patient Model with Embeddings
const PatientSchema = new mongoose.Schema({
  patientId: {
    type: String,
    required: true,
    unique: true,
    index: true,
  },
  name: {
    type: String,
    required: true,
  },
  age: {
    type: Number,
    required: true,
  },
  weight: {
    type: Number,
    required: true,
  },
  height: {
    type: Number,
    required: true,
  },
  gender: {
    type: String,
    enum: ["Male", "Female", "Other"],
    required: true,
  },
  bloodType: {
    type: String,
    enum: ["A+", "A-", "B+", "B-", "AB+", "AB-", "O+", "O-"],
  },
  allergies: [
    {
      type: String,
    },
  ],
  chronicConditions: [
    {
      type: String,
    },
  ],
  medications: [
    {
      name: String,
      dosage: String,
      frequency: String,
      startDate: Date,
    },
  ],
  previousSurgeries: [
    {
      procedure: String,
      date: Date,
      hospital: String,
      notes: String,
    },
  ],
  familyHistory: [
    {
      type: String,
    },
  ],
  lifestyle: {
    smoking: {
      type: String,
      enum: ["Yes", "No", "Former"],
    },
    alcohol: {
      type: String,
      enum: ["Yes", "No", "Occasionally"],
    },
    exercise: {
      type: String,
      enum: ["Regular", "Occasional", "Sedentary"],
    },
    diet: String,
  },
  contactInfo: {
    phone: String,
    email: String,
    emergencyContact: {
      name: String,
      relationship: String,
      phone: String,
    },
    address: {
      street: String,
      city: String,
      state: String,
      zipCode: String,
      country: String,
    },
  },
  // For RAG
  profileText: {
    type: String,
    required: true,
  },
  embedding: {
    type: [Number],
    required: true,
  },
  registeredAt: {
    type: Date,
    default: Date.now,
  },
  updatedAt: {
    type: Date,
    default: Date.now,
  },
});

module.exports = mongoose.model("Patient", PatientSchema);
